extend type Query {
    userProfile: User!
}

extend type Mutation {
    userCreate(userInput: UserInput!): User!
    userUpdate(userInput: UserInput!): User!
    userDelete(id: ID): User
}

type User {
    id: ID
    publicName: String!
    firstName: String
    lastName: String
    email: String!
    emailVerifiedAt: DateTime
    roles: [Role!]!
}

input UserInput {
    id: ID
    publicName: String!
    firstName: String
    lastName: String
    email: String!
    password: String
}
